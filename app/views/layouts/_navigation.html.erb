<%# app/views/layouts/_sidebar.html.erb %>
<div class="flex h-screen bg-gray-50">
  <!-- Sidebar -->
  <aside class="w-64 bg-blue-900 text-white flex flex-col transform -translate-x-full md:translate-x-0 transition-transform duration-300 ease-in-out fixed md:relative z-30 h-full" id="sidebar">
    <!-- Logo and Close Button -->
    <div class="flex items-center justify-between p-4 border-b border-blue-800">
      <div class="flex items-center space-x-3">
        <div class="w-8 h-8 bg-blue-500 rounded-lg flex items-center justify-center">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
          </svg>
        </div>
        <h1 class="text-xl font-bold">Sync-a-Site</h1>
      </div>
      <button class="md:hidden text-gray-300 hover:text-white" id="closeSidebar">
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
        </svg>
      </button>
    </div>

    <!-- User Info -->
    <div class="p-4 border-b border-blue-800">
      <div class="flex items-center space-x-3">
        <div class="w-10 h-10 bg-blue-600 rounded-full flex items-center justify-center">
          <span class="font-semibold"><%= current_user.email[0].upcase %></span>
        </div>
        <div>
          <p class="font-medium"><%= current_user.email %></p>
          <p class="text-sm text-blue-300">
            <span class="px-2 py-1 bg-blue-800 rounded-full text-xs">
              <%= current_user.role %>
            </span>
          </p>
        </div>
      </div>
    </div>

    <!-- Navigation Links -->
    <nav class="flex-1 p-4 overflow-y-auto sidebar-scroll">
      <ul class="space-y-2">
        <!-- Dashboard -->
        <li>
          <%= link_to dashboard_path, class: "sidebar-link #{'active' if current_page?(dashboard_path)}" do %>
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6" />
            </svg>
            <span>Dashboard</span>
          <% end %>
        </li>

        <!-- Admin Section -->
        <% if current_user.super_admin? || current_user.agency_admin? %>
          <li>
            <div class="px-4 py-2 text-sm font-semibold text-blue-400 uppercase tracking-wider mt-6">
              Admin Panel
            </div>
            <ul class="mt-2 space-y-1">
              <!-- Features Management -->
              <li>
                <%= link_to admin_features_path, class: "sidebar-link #{'active' if current_page?(admin_features_path)}" do %>
                  <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2" />
                  </svg>
                  <span>Feature Registry</span>
                <% end %>
              </li>

              <!-- Users -->
              <li>
                <%= link_to users_path, class: "sidebar-link #{'active' if current_page?(users_path)}" do %>
                  <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197m13.5 0a6 6 0 00-9 5.197" />
                  </svg>
                  <span>User Management</span>
                <% end %>
              </li>

              <!-- Tenants -->
              <li>
                <%= link_to tenants_path, class: "sidebar-link #{'active' if current_page?(tenants_path)}" do %>
                  <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />
                  </svg>
                  <span>Tenant Management</span>
                <% end %>
              </li>

              <!-- Settings -->
              <li>
                <a href="#" class="sidebar-link">
                  <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z" />
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                  </svg>
                  <span>System Settings</span>
                </a>
              </li>
            </ul>
          </li>
        <% end %>

        <!-- Feature-based Navigation -->
        <% if current_user.tenant %>
          <% enabled_features = current_user.tenant.enabled_features %>
          <% if enabled_features.any? %>
            <li>
              <div class="px-4 py-2 text-sm font-semibold text-blue-400 uppercase tracking-wider mt-6">
                Enabled Features
              </div>
              <ul class="mt-2 space-y-1">
                <% enabled_features.each do |tenant_feature| %>
                  <% feature = tenant_feature.feature %>
                  <% if !feature.is_core && feature.key != 'dashboard' %>
                    <li>
                      <a href="#" class="sidebar-link">
                        <div class="w-2 h-2 bg-green-500 rounded-full"></div>
                        <span><%= feature.name %></span>
                      </a>
                    </li>
                  <% end %>
                <% end %>
              </ul>
            </li>
          <% end %>
        <% end %>
      </ul>
    </nav>

    <!-- Sign Out -->
    <div class="p-4 border-t border-blue-800">
      <%= button_to destroy_user_session_path, method: :delete, class: "sidebar-link w-full text-left hover:bg-blue-700" do %>
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1" />
        </svg>
        <span>Sign Out</span>
      <% end %>
    </div>
  </aside>

  <!-- Main Content -->
  <div class="flex-1 flex flex-col overflow-hidden">
    <!-- Top Bar -->
    <header class="bg-white border-b border-gray-200 py-3 px-6 flex items-center justify-between">
      <div class="flex items-center">
        <button class="text-gray-600 hover:text-blue-600 md:hidden" id="openSidebar">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
          </svg>
        </button>
        <div class="ml-4">
          <h2 class="text-lg font-semibold text-gray-800" id="pageTitle">
            <%= yield(:page_title) || 'Dashboard' %>
          </h2>
          <p class="text-sm text-gray-600" id="pageDescription">
            <%= yield(:page_description) || 'Overview of your account' %>
          </p>
        </div>
      </div>
      
      <!-- Notifications/User Info -->
      <div class="flex items-center space-x-4">
        <div class="relative">
          <button class="text-gray-600 hover:text-blue-600">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 17h5l-1.405-1.405A2.032 2.032 0 0118 14.158V11a6.002 6.002 0 00-4-5.659V5a2 2 0 10-4 0v.341C7.67 6.165 6 8.388 6 11v3.159c0 .538-.214 1.055-.595 1.436L4 17h5m6 0v1a3 3 0 11-6 0v-1m6 0H9" />
            </svg>
          </button>
          <span class="absolute -top-1 -right-1 w-3 h-3 bg-red-500 rounded-full"></span>
        </div>
        
        <div class="relative group">
          <button class="flex items-center space-x-3">
            <div class="w-8 h-8 bg-blue-600 rounded-full flex items-center justify-center text-white">
              <span class="font-semibold"><%= current_user.email[0].upcase %></span>
            </div>
            <div class="text-left hidden md:block">
              <p class="text-sm font-medium text-gray-800"><%= current_user.email %></p>
              <p class="text-xs text-gray-600"><%= current_user.role %></p>
            </div>
            <svg class="w-4 h-4 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
            </svg>
          </button>
          
          <!-- Dropdown -->
          <div class="absolute right-0 mt-2 w-48 bg-white rounded-lg shadow-lg border border-gray-200 py-2 hidden group-hover:block z-10">
            <%= link_to "My Profile", "#", class: "block px-4 py-2 text-gray-700 hover:bg-blue-50" %>
            <%= link_to "Account Settings", "#", class: "block px-4 py-2 text-gray-700 hover:bg-blue-50" %>
            <div class="border-t my-1"></div>
            <%= button_to "Sign Out", destroy_user_session_path, method: :delete, class: "block w-full text-left px-4 py-2 text-gray-700 hover:bg-blue-50" %>
          </div>
        </div>
      </div>
    </header>

    <!-- Page Content -->
    <main class="flex-1 overflow-y-auto bg-gray-50 p-6">
      <%= yield %>
    </main>
  </div>
</div>

<script>
  // Mobile sidebar toggle
  document.addEventListener('DOMContentLoaded', function() {
    const openButton = document.getElementById('openSidebar');
    const closeButton = document.getElementById('closeSidebar');
    const sidebar = document.getElementById('sidebar');
    
    if (openButton) {
      openButton.addEventListener('click', function() {
        sidebar.classList.remove('-translate-x-full');
      });
    }
    
    if (closeButton) {
      closeButton.addEventListener('click', function() {
        sidebar.classList.add('-translate-x-full');
      });
    }
    
    // Close sidebar when clicking outside on mobile
    document.addEventListener('click', function(event) {
      if (window.innerWidth < 768) {
        if (!sidebar.contains(event.target) && !openButton.contains(event.target)) {
          sidebar.classList.add('-translate-x-full');
        }
      }
    });
    
    // Add active class to current page
    const currentPath = window.location.pathname;
    const links = document.querySelectorAll('.sidebar-link');
    links.forEach(link => {
      if (link.getAttribute('href') === currentPath) {
        link.classList.add('active');
      }
    });
  });
</script>