<%# app/views/admin/features/index.html.erb %>
<div class="min-h-screen bg-gray-100">
  <div class="py-10">
    <div class="max-w-7xl mx-auto sm:px-6 lg:px-8">
      <div class="bg-white overflow-hidden shadow-sm sm:rounded-lg">
        <div class="p-6 bg-white border-b border-gray-200">
          <div class="flex justify-between items-center mb-6">
            <h1 class="text-2xl font-bold">Manage Features</h1>
            <%= link_to "Back to Dashboard", dashboard_path, class: "text-blue-600 hover:underline" %>
          </div>
          
          <div class="mb-6">
            <h2 class="text-lg font-semibold mb-4">Available Features for <%= @tenant.name %></h2>
            <p class="text-gray-600 mb-4">Toggle features on/off for this tenant. Some features may require dependencies.</p>
          </div>
          
          <% if @features.any? %>
            <div class="space-y-6">
              <% @features.group_by(&:category).each do |category, features| %>
                <div class="border rounded-lg p-4">
                  <h3 class="text-md font-semibold text-gray-700 mb-3 capitalize"><%= category || "Uncategorized" %></h3>
                  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
                    <% features.sort_by(&:display_order).each do |feature| %>
                      <div class="border rounded-lg p-4 <%= @enabled_features.include?(feature.id) ? 'border-green-200 bg-green-50' : 'border-gray-200' %>">
                        <div class="flex justify-between items-start">
                          <div>
                            <h4 class="font-medium text-gray-900"><%= feature.name %></h4>
                            <p class="text-sm text-gray-600 mt-1"><%= feature.description %></p>
                            
                            <% if feature.dependencies.any? %>
                              <div class="mt-2">
                                <span class="text-xs text-gray-500">Requires: <%= feature.dependencies.join(', ') %></span>
                              </div>
                            <% end %>
                            
                            <% if feature.is_core %>
                              <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800 mt-2">
                                Core Feature
                              </span>
                            <% end %>
                            
                            <% if feature.is_agency_only %>
                              <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-purple-100 text-purple-800 mt-2">
                                Agency Only
                              </span>
                            <% end %>
                          </div>
                          
                          <% unless feature.is_core %>
                            <div class="flex items-center">
                              <%= form_with url: admin_feature_path(feature), method: :patch, class: "toggle-form" do |f| %>
                                <div class="flex items-center">
                                  <div class="relative inline-block w-10 mr-2 align-middle select-none">
                                    <input type="checkbox"
                                           name="enabled"
                                           value="true"
                                           <%= 'checked' if @enabled_features.include?(feature.id) %>
                                           onchange="this.form.submit()"
                                           class="toggle-checkbox absolute block w-6 h-6 rounded-full bg-white border-4 appearance-none cursor-pointer"
                                           id="feature_<%= feature.id %>" />
                                    <label for="feature_<%= feature.id %>" 
                                           class="toggle-label block overflow-hidden h-6 rounded-full bg-gray-300 cursor-pointer"></label>
                                  </div>
                                  <label for="feature_<%= feature.id %>" class="text-xs text-gray-700">
                                    <%= @enabled_features.include?(feature.id) ? 'Enabled' : 'Disabled' %>
                                  </label>
                                </div>
                              <% end %>
                            </div>
                          <% end %>
                        </div>
                      </div>
                    <% end %>
                  </div>
                </div>
              <% end %>
            </div>
          <% else %>
            <p class="text-gray-600">No features available for this tenant.</p>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

<style>
.toggle-checkbox:checked {
  right: 0;
  border-color: #10B981;
  transform: translateX(100%);
}
.toggle-checkbox:checked + .toggle-label {
  background-color: #10B981;
}
.toggle-checkbox {
  transition: all 0.3s;
}
</style>