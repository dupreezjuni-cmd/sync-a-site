<% content_for :page_title, "Dashboard" %>
<% content_for :page_description, "Welcome back, #{current_user.email}" %>

<!-- Stats Cards -->
<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
  <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6">
    <div class="flex items-center justify-between">
      <div>
        <p class="text-sm font-medium text-gray-600">Active Features</p>
        <p class="text-2xl font-bold text-gray-800 mt-2"><%= @enabled_features&.count || 0 %></p>
      </div>
      <div class="w-12 h-12 bg-blue-100 rounded-lg flex items-center justify-center">
        <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
        </svg>
      </div>
    </div>
    <div class="mt-4">
      <div class="text-xs text-green-600 font-medium">
        <span>+3 core features</span>
      </div>
    </div>
  </div>

  <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6">
    <div class="flex items-center justify-between">
      <div>
        <p class="text-sm font-medium text-gray-600">Your Tenant</p>
        <p class="text-2xl font-bold text-gray-800 mt-2"><%= current_user.tenant&.name || "No tenant" %></p>
      </div>
      <div class="w-12 h-12 bg-green-100 rounded-lg flex items-center justify-center">
        <svg class="w-6 h-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />
        </svg>
      </div>
    </div>
    <div class="mt-4">
      <div class="text-xs text-gray-600">
        <span><%= current_user.tenant&.subdomain || "No subdomain" %></span>
      </div>
    </div>
  </div>

  <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6">
    <div class="flex items-center justify-between">
      <div>
        <p class="text-sm font-medium text-gray-600">User Role</p>
        <p class="text-2xl font-bold text-gray-800 mt-2"><%= current_user.role.titleize %></p>
      </div>
      <div class="w-12 h-12 bg-purple-100 rounded-lg flex items-center justify-center">
        <svg class="w-6 h-6 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197m13.5 0a6 6 0 00-9 5.197" />
        </svg>
      </div>
    </div>
    <div class="mt-4">
      <% if current_user.super_admin? || current_user.agency_admin? %>
        <span class="px-2 py-1 bg-blue-100 text-blue-800 text-xs font-medium rounded-full">Administrator</span>
      <% else %>
        <span class="px-2 py-1 bg-gray-100 text-gray-800 text-xs font-medium rounded-full">Standard User</span>
      <% end %>
    </div>
  </div>

  <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6">
    <div class="flex items-center justify-between">
      <div>
        <p class="text-sm font-medium text-gray-600">Status</p>
        <p class="text-2xl font-bold text-gray-800 mt-2">Active</p>
      </div>
      <div class="w-12 h-12 bg-green-100 rounded-lg flex items-center justify-center">
        <svg class="w-6 h-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
        </svg>
      </div>
    </div>
    <div class="mt-4">
      <div class="text-xs text-green-600 font-medium">
        <span>âœ“ All systems operational</span>
      </div>
    </div>
  </div>
</div>

<!-- Main Content Area -->
<div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
  <!-- Left Column -->
  <div class="lg:col-span-2 space-y-6">
    <!-- Welcome Card -->
    <div class="bg-gradient-to-r from-blue-600 to-blue-800 rounded-xl shadow-lg p-8 text-white">
      <div class="flex items-center justify-between">
        <div>
          <h2 class="text-2xl font-bold mb-2">Welcome back, <%= current_user.email %>!</h2>
          <p class="text-blue-100 mb-6">You're logged in as <%= current_user.role %> with access to all core features.</p>
          <%= link_to admin_features_path, class: "inline-flex items-center px-4 py-2 bg-white text-blue-600 font-medium rounded-lg hover:bg-blue-50 transition-colors" do %>
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
            </svg>
            Explore More Features
          <% end %>
        </div>
        <div class="hidden md:block">
          <div class="w-24 h-24 bg-blue-500 rounded-full flex items-center justify-center opacity-20">
            <svg class="w-16 h-16" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
            </svg>
          </div>
        </div>
      </div>
    </div>

    <!-- Enabled Features -->
    <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6">
      <div class="flex items-center justify-between mb-6">
        <h3 class="text-lg font-semibold text-gray-800">Enabled Features</h3>
        <%= link_to "Manage All", admin_features_path, class: "text-sm text-blue-600 hover:text-blue-800 font-medium" %>
      </div>
      
      <% if @enabled_features.present? %>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
          <% @enabled_features.each do |feature| %>
            <div class="border border-gray-200 rounded-lg p-4 hover:border-blue-300 transition-colors">
              <div class="flex items-center justify-between">
                <div class="flex items-center space-x-3">
                  <div class="w-10 h-10 bg-blue-100 rounded-lg flex items-center justify-center">
                    <% if feature.key == 'dashboard' %>
                      <svg class="w-5 h-5 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6" />
                      </svg>
                    <% elsif feature.key == 'pages' %>
                      <svg class="w-5 h-5 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                      </svg>
                    <% elsif feature.key == 'navigation' %>
                      <svg class="w-5 h-5 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h7" />
                      </svg>
                    <% else %>
                      <svg class="w-5 h-5 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 3v4M3 5h4M6 17v4m-2-2h4m5-16l2.286 6.857L21 12l-5.714 2.143L13 21l-2.286-6.857L5 12l5.714-2.143L13 3z" />
                      </svg>
                    <% end %>
                  </div>
                  <div>
                    <h4 class="font-medium text-gray-800"><%= feature.name %></h4>
                    <p class="text-sm text-gray-600"><%= feature.description %></p>
                  </div>
                </div>
                <span class="px-2 py-1 bg-green-100 text-green-800 text-xs font-medium rounded-full">
                  Enabled
                </span>
              </div>
              <% if feature.dependencies.any? %>
                <div class="mt-3 pt-3 border-t border-gray-100">
                  <p class="text-xs text-gray-500">Requires: <%= feature.dependencies.join(', ') %></p>
                </div>
              <% end %>
            </div>
          <% end %>
        </div>
      <% else %>
        <div class="text-center py-8">
          <div class="w-16 h-16 bg-gray-100 rounded-full flex items-center justify-center mx-auto mb-4">
            <svg class="w-8 h-8 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
            </svg>
          </div>
          <p class="text-gray-600 mb-4">No features enabled yet</p>
          <%= link_to "Enable Features", admin_features_path, class: "inline-flex items-center px-4 py-2 bg-blue-600 text-white font-medium rounded-lg hover:bg-blue-700 transition-colors" %>
        </div>
      <% end %>
    </div>
  </div>

  <!-- Right Column -->
  <div class="space-y-6">
    <!-- Quick Actions -->
    <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6">
      <h3 class="text-lg font-semibold text-gray-800 mb-6">Quick Actions</h3>
      <div class="space-y-3">
        <% if current_user.super_admin? || current_user.agency_admin? %>
          <%= link_to admin_features_path, class: "flex items-center justify-between p-3 bg-blue-50 rounded-lg hover:bg-blue-100 transition-colors group" do %>
            <div class="flex items-center space-x-3">
              <div class="w-8 h-8 bg-blue-600 rounded-lg flex items-center justify-center">
                <svg class="w-4 h-4 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
                </svg>
              </div>
              <span class="font-medium text-gray-800">Manage Features</span>
            </div>
            <svg class="w-5 h-5 text-gray-400 group-hover:text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
            </svg>
          <% end %>

          <%= link_to users_path, class: "flex items-center justify-between p-3 bg-blue-50 rounded-lg hover:bg-blue-100 transition-colors group" do %>
            <div class="flex items-center space-x-3">
              <div class="w-8 h-8 bg-green-600 rounded-lg flex items-center justify-center">
                <svg class="w-4 h-4 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197m13.5 0a6 6 0 00-9 5.197" />
                </svg>
              </div>
              <span class="font-medium text-gray-800">User Management</span>
            </div>
            <svg class="w-5 h-5 text-gray-400 group-hover:text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
            </svg>
          <% end %>

          <%= link_to tenants_path, class: "flex items-center justify-between p-3 bg-blue-50 rounded-lg hover:bg-blue-100 transition-colors group" do %>
            <div class="flex items-center space-x-3">
              <div class="w-8 h-8 bg-purple-600 rounded-lg flex items-center justify-center">
                <svg class="w-4 h-4 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />
                </svg>
              </div>
              <span class="font-medium text-gray-800">Tenant Management</span>
            </div>
            <svg class="w-5 h-5 text-gray-400 group-hover:text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
            </svg>
          <% end %>
        <% end %>
      </div>
    </div>

    <!-- Recent Activity -->
    <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6">
      <h3 class="text-lg font-semibold text-gray-800 mb-6">Recent Activity</h3>
      <div class="space-y-4">
        <div class="flex items-start space-x-3">
          <div class="w-8 h-8 bg-blue-100 rounded-full flex items-center justify-center">
            <svg class="w-4 h-4 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
          </div>
          <div>
            <p class="text-sm text-gray-800">Core features enabled</p>
            <p class="text-xs text-gray-500">Just now</p>
          </div>
        </div>
        <div class="flex items-start space-x-3">
          <div class="w-8 h-8 bg-green-100 rounded-full flex items-center justify-center">
            <svg class="w-4 h-4 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6" />
            </svg>
          </div>
          <div>
            <p class="text-sm text-gray-800">Logged in successfully</p>
            <p class="text-xs text-gray-500">2 minutes ago</p>
          </div>
        </div>
      </div>
    </div>

    <!-- Getting Started -->
    <div class="bg-gradient-to-br from-blue-50 to-gray-50 rounded-xl border border-blue-200 p-6">
      <h3 class="text-lg font-semibold text-gray-800 mb-4">Getting Started</h3>
      <p class="text-gray-600 mb-4">Enable additional features to unlock more functionality for your tenant.</p>
      <div class="space-y-3">
        <div class="flex items-center justify-between">
          <div class="flex items-center space-x-3">
            <div class="w-6 h-6 bg-blue-100 rounded flex items-center justify-center">
              <span class="text-xs font-medium text-blue-600">1</span>
            </div>
            <span class="text-sm text-gray-700">Enable Blog feature</span>
          </div>
          <%= link_to "Enable", admin_features_path, class: "text-sm text-blue-600 hover:text-blue-800 font-medium" %>
        </div>
        <div class="flex items-center justify-between">
          <div class="flex items-center space-x-3">
            <div class="w-6 h-6 bg-blue-100 rounded flex items-center justify-center">
              <span class="text-xs font-medium text-blue-600">2</span>
            </div>
            <span class="text-sm text-gray-700">Set up E-commerce</span>
          </div>
          <%= link_to "Configure", admin_features_path, class: "text-sm text-blue-600 hover:text-blue-800 font-medium" %>
        </div>
      </div>
    </div>
  </div>
</div>